<html>
    <head>
        <title>
            <%= title %>
        </title>

    </head>

    <body>
        <h1>Codeial / <%= title %></h1>
        <section id="feed-posts">
            <h4>POST</h4>
            <% if (locals.user){ %>
            <form action="/posts/create" id="new-post-form" meathod = "POST">
                <textarea name="content" id="" cols="30" rows="3"></textarea>
                <input type="submint" value="Post">
            
            </form>


            <% } %>
            <div id="posts-list-container">
                <ul>
                    <% for(post of posts){ %>
                        <%- include('_post') -%>
                    <% } %>
                </ul>
            </div>


        </section>

        <section id="user-friends">
            <h4>Friends</h4>
            <% for(u of all_users){ %>
                <p>
                    <a href="/users/profile/<%= u.id>"> <%= u.name %> </a>
                </p>
            <% } %>
        </section>
    </body>
</html>